
public class StarsDown {
	

		
		public static String printTriangleSmall (int count) {
			    if( count <= 1 ) {
			    	return "*";
			    }else {

			    String p = printTriangleSmall(count - 1);
			    p = p + "*";
			    System.out.println(p);

			    return p;
			 }
		}
		
		
