	public void pintaCirculos(Graphics g, int nivel, int x1, int y1, int largo) {    //Recursividad basica pero grafica
		

	    
		
		g.drawOval(x1, y1-largo/2, largo, largo);
		
	    g.drawOval(x1, y1-largo/4, largo/2, largo/2);
		g.drawOval(x1+largo/2, y1-largo/4, largo/2, largo/2);
		
		g.drawOval(x1, y1-largo/8, largo/4, largo/4);
		g.drawOval(x1+largo/4, y1-largo/8, largo/4, largo/4);
		g.drawOval(x1+largo/2, y1-largo/8, largo/4, largo/4);
		g.drawOval(x1+largo/4*3, y1-largo/8, largo/4, largo/4);
		
		/*if(nivel == 0) {
